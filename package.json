{
  "name": "react-one-page-portfolio",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@smooth-ui/core-sc": "^10.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-icons": "^3.8.0",
    "react-lazyload-fadein": "^1.1.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.3.0",
    "styled-components": "^5.0.0-regexrehydrate"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage",
    "test:nowatch": "CI=true react-scripts test --env=jsdom",
    "lint": "eslint --ext js,jsx src --fix",
    "pre-commit-verify": "npm run test:nowatch && lint-staged && pretty-quick --staged && npm audit",
    "eject": "react-scripts eject"
  },
  "lint-staged": {
    "*.js": [
      "eslint --ext js,jsx src --fix",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!src/index.js",
      "!src/serviceWorker.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit-verify"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "babel-loader": "^8.0.6",
    "enzyme-to-json": "^3.4.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.4.0",
    "eslint-plugin-jest": "^22.21.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^1.3.1",
    "jest-styled-components": "^6.3.4",
    "lint-staged": "^8.1.0",
    "prettier": "1.18.2",
    "pretty-quick": "^1.8.1",
    "react-test-renderer": "^16.12.0"
  }
}
